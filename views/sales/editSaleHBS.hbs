<form method="POST" action="/sale/{{saleFromDb._id}}?_method=PUT">

  <!--
    Template for creating input form for a string object key called stringMember
    NOTE: for numeric input fields use `type="number"`
  --->
 <h1 class="petH1">Edit Sale Report</h1>
<div class="createSaletCont createPetCont">
    <div class="createPetBg" id= "createSaleBg">
        <label for="month">Month</label>
            <select name="month" >
                <option value="{{saleFromDb.month}}" hidden="hidden" selected="selected">{{saleFromDb.month}}</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>

        <label for="year">Year</label>
            <input type="text" name="year" value="{{saleFromDb.year}}"/>
            
        <label for="amount">Amount</label>
        <input type="number" name="amount" value="{{saleFromDb.amount}}" />


        <input type ="submit" name="submit" value="Edit Sale" />
        </form>

        {{!-- Remove Pet from List --}}
        <form method="POST" action ="/sale/{{saleFromDb._id}}?_method=DELETE">
        <input type ="submit" name ="deleteBtn" value ="Delete">
        </form>

        <form method="GET" action ="/listAll">
        <input type ="submit" name ="homeBtn" value="Home" />
        </form>
    </div>
</div>